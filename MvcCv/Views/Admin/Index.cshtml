@using MvcCv.Models.Entity
@model List<Tbl_Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container">
        <h3 class="mt-3">Admin Listesi</h3>
        <div class="row">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="card mt-2 ml-3 mr-5">
                        <div class="card-body">
                            <h5 class="card-title">@item.UserName</h5>
                            <div style="text-align:right">
                                <a class="btn btn-info btn-sm" href="/Admin/EditAdmin/@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Admin/DeleteAdmin/@item.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>